<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/default_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/note_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_note"
        android:layout_width="@dimen/image_dimension"
        android:layout_height="@dimen/image_dimension"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/note_content_description">
    </ImageView>

    <TextView
        android:id="@+id/note_text_view"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/default_margin"
        android:paddingStart="@dimen/default_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="@id/note_image_view"
        app:layout_constraintBottom_toBottomOf="@id/note_image_view"
        app:layout_constraintStart_toEndOf="@id/note_image_view"
        android:layout_height="wrap_content"
        tools:text="Write a note here...">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>